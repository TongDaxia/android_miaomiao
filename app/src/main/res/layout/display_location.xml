<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <com.baidu.mapapi.map.MapView
        android:id="@+id/location_mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_textView"
        android:background="#1A000000"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/location_mapView"
        android:layout_alignTop="@id/location_mapView" />
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/now_location"
        android:layout_margin="20dp"
        android:id="@+id/now_location"
        android:layout_alignLeft="@+id/location_mapView"
        android:layout_alignBottom="@id/location_mapView"/>
</RelativeLayout>